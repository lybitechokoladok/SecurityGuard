<UserControl x:Class="SecurityGuard.WPF.Components.Layout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SecurityGuard.WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <local:NavigationBar Grid.Column="0" DataContext="{Binding NavigationBarViewModel}">
                <local:NavigationBar.Effect>
                    <DropShadowEffect BlurRadius="10"
                                      Color="Black"
                                      />
                </local:NavigationBar.Effect>
            </local:NavigationBar>

            <ContentControl
            Grid.Column="1"
            MaxWidth="1000"
            Margin="20"
            Content="{Binding ContentViewModel}"/>

        </Grid>
    </ScrollViewer>
</UserControl>
