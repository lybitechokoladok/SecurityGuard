<UserControl x:Class="SecurityGuard.WPF.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SecurityGuard.WPF.Views"
             xmlns:custom="clr-namespace:PasswordBoxMVVM.Components;assembly=PasswordBoxMVVM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel 
            Grid.Row="0"
            Orientation="Vertical"
            HorizontalAlignment="Center">

            <TextBlock 
                Text="Вход"
                Foreground="White"
                FontSize="32"
                HorizontalAlignment="Center"/>
            <TextBlock
                Text="Войдите чтобы начать пользоваться приложением"
                Foreground="White"
                Margin="0 10 0 0"/>
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Orientation="Vertical"
            Margin="0 20 0 0">
            <ComboBox>
                <ComboBoxItem
                    Content="Сортрудник общего отдела"/>
                <ComboBoxItem
                    Content="Сотрудник охраны"/>
            </ComboBox>

            <TextBox
                Margin="0 20 0 0"
                Foreground="white"/>

            <custom:BindablePasswordBox
                Margin="0 20 0 0"
                Foreground="white"/>
        </StackPanel>

        <StackPanel 
            Grid.Row="2"
            Orientation="Horizontal"
            Margin="0 10 0 0"
            HorizontalAlignment="Center">
            
            <CheckBox
                Content="Запомнить меня"
                Foreground="White"
                VerticalAlignment="Center"/>

            <Button
                Content="Забыли пароль?"
                Foreground="White"
                Margin="20 0 0 0"
                Background="Transparent"
                VerticalAlignment="Center"
                BorderThickness="0"/>
        </StackPanel>

        <Button Grid.Row="3"
                Content="Войти в систему"
                Width="200" Height="40"
                Margin="0 20 0 0"
                Foreground="white"
                Background="#CE6315"/>
    </Grid>
</UserControl>
